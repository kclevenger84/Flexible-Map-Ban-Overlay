{
  "name": "flexible-map-ban-overlay",
  "productName": "Flexible Map Ban Overlay",
  "version": "0.0.2",
  "description": "A map ban/pick overlay for Valorant and Overwatch tournaments",
  "main": "main.js",
  "homepage": "https://github.com/kclevenger84/Valorant-Map-Ban-Overlay",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.Clevenger.flexible-map-ban",
    "productName": "Flexible Map Ban Overlay",
    "directories": {
      "output": "dist"
    },
    "files": [
      "package.json",
      "main.js",
      "controller.html",
      "overlay.html",
      "style.css",
      "images/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "images",
        "to": "images"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "ws": "^8.16.0"
  },
  "keywords": [
    "valorant",
    "overwatch",
    "esports",
    "overlay",
    "streaming"
  ],
  "author": "Kevin Clevenger with contributions from Antonia Lucas",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kclevenger84/Valorant-Map-Ban-Overlay.git"
  },
  "bugs": {
    "url": "https://github.com/kclevenger84/Valorant-Map-Ban-Overlay/issues"
  }
}